<% include partials/header %>
<h1>Comments on <%= film.name %></h1>

<form action="/films/<%=film._id%>/comments" method="POST">
	<input type="text" name="comment[text]" placeholder="comment">
	<button>Submit</button>
</form>

<% film.comments.forEach(function(comment){ %>
	
	<p><strong><%= comment.author.username %></strong> - <%= comment.text %> - 

	<% if (currentUser && comment.author.id.equals(currentUser._id)){ %>

	<a 
						 href="/films/<%=film._id%>/comments/<%=comment._id%>/edit">Edit</a>
						 <form action="/films/<%=film._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
						 <button>Delete</button>
						 </form>

	<% } %>

<% }) %>

<% include partials/footer %>