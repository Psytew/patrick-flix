<% include partials/header %>
<h1>Comments on <%= film.name %></h1>

<form action="/films/<%=film._id%>/comments" method="POST">
	<input type="text" name="comment[text]" placeholder="comment">
	<input type="text" name="comment[author]" placeholder="username">
	<button>Submit</button>
</form>

<% film.comments.forEach(function(comment){ %>
	
	<p><strong><%= comment.author %></strong> - <%= comment.text %>

<% }) %>

<% include partials/footer %>