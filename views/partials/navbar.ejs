<link rel="stylesheet" href="/styles/navbar.css">
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

<div id="navbar">
	<ul>
		<a href="/"><li id="logo"><img id="logoimage" src="/patflix.png" /></li></a>
		<li id="blurb">A Netflix mockup populated exclusively by films I've made</li>
	<% if (!currentUser){ %>
		<li id="register"><a href="/register">Sign Up</a></li>
		<li id="login"><a href="/login">Login</a></li>
	<% } else { %>
		<li id="signout"><a href="/logout">Log Out</a></li>
		<li id="signedin">Signed in as <%=currentUser.username%></li>
	<% } %>
	</ul>
</div>